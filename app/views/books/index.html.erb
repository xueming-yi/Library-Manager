<table class='table table-spring'>
  <thead>
    <th>序号</th>
    <th>书名</th>
    <th>作者</th>
    <th>isbn</th>
    <th>入库时间</th>
    <th>分类</th>
    <th>价格</th>
    <th>状态</th>
  </thead>
  <tbody>
    <% if @books.present?%>
      <% @books.each_with_index do |book,index|%>
      <tr>
        <td><%= index+1%></td>
        <td><%= book.name%></td>
        <td><%= book.author%></td>
        <td><%= book.isbn%></td>
        <td><%= book.intime%></td>
        <td><%= book.category.name%></td>
        <td><%= book.price%></td>
        <td><%= book.status%></td>
      </tr>
      <%end%>
    <%else%>
      <tr>
        <td class='text-center' colspan='8'>NO BOOK RECORD!</td>
      </tr>
    <%end%>
  </tbody>
</table>